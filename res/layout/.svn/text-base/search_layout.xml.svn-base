<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#cccccc"
    android:orientation="vertical" >

    <Button
        android:id="@+id/hledat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/search_btn_touch"
        android:gravity="center" android:layout_marginTop="10dp" android:layout_marginLeft="10dp"/>

    <AutoCompleteTextView
        android:id="@+id/search_edit_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:cursorVisible="true"
        android:focusable="true"
        android:inputType="text|textAutoCorrect"
        android:lines="1"
        android:maxLines="1"
        android:selectAllOnFocus="true" android:layout_marginLeft="50dp">

        <requestFocus />
    </AutoCompleteTextView>

    <ImageView
        android:id="@+id/clear_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hledat_btn"
        android:layout_alignRight="@+id/search_edit_text"
        android:layout_marginRight="0dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/search_clear_touch" />

</RelativeLayout>